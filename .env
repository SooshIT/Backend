# SMS Service (Optional for development)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Video Conferencing (Optional for development)
VIDEO_PROVIDER=daily
DAILY_API_KEY=
DAILY_DOMAIN=

# Sentry (Optional for development)
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8081", "exp://", "https://*.devtunnels.ms", "https://*.ngrok-free.dev", "https://*.expo.dev", "http://localhost:8082", "exp://192.168.0.176:8082"]
CORS_ALLOW_CREDENTIALS=True

# WebSocket
WS_PING_INTERVAL=25
WS_PING_TIMEOUT=10

# AI Configuration
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=1000
AI_RECOMMENDATION_BATCH_SIZE=10

# Caching
CACHE_TTL_SECONDS=3600
CACHE_RECOMMENDATIONS_TTL=1800

# Background Tasks
CELERY_TASK_ALWAYS_EAGER=False

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Feature Flags
ENABLE_AI_AGENT=True
ENABLE_PROXIMITY_SEARCH=True
