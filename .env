# ============================================================================
# SOOSH BACKEND - Development Environment Variables
# ============================================================================

# Application
APP_NAME=Soosh
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database - PostgreSQL (using your macOS username)
DATABASE_URL=postgresql+asyncpg://vivekkumar@localhost:5432/soosh
DATABASE_SYNC_URL=postgresql://vivekkumar@localhost:5432/soosh
DB_ECHO=False

# Redis
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# JWT Authentication
SECRET_KEY=dev-secret-key-change-in-production-1234567890
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# OAuth2 - Google (Optional - leave as-is for now)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback

# OAuth2 - Apple (Optional - leave as-is for now)
APPLE_CLIENT_ID=
APPLE_TEAM_ID=
