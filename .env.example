# ============================================================================
# SOOSH BACKEND - Environment Variables Template
# Copy this to .env and fill in your actual values
# ============================================================================

# Application
APP_NAME=Soosh
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database - PostgreSQL
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/soosh
DATABASE_SYNC_URL=postgresql://postgres:password@localhost:5432/soosh
DB_ECHO=False  # Set to True for SQL query logging

# Redis
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# JWT Authentication
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# OAuth2 - Google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback

# OAuth2 - Apple
APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY_PATH=/path/to/apple/private/key.p8

# OAuth2 - LinkedIn
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_REDIRECT_URI=http://localhost:8000/api/v1/auth/linkedin/callback

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_EMBEDDING_DIMENSION=1536

# Whisper API (Speech-to-Text)
WHISPER_API_URL=https://cf4d52b914ef.ngrok-free.app/api/v1/whisper/transcribe
WHISPER_API_KEY=optional-api-key

# Text-to-Speech
TTS_PROVIDER=openai  # or 'elevenlabs', 'google'
ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_VOICE_ID=default-voice-id

# Stripe Payment
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_CURRENCY=USD

# AWS S3 (File Storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=soosh-uploads
AWS_CLOUDFRONT_URL=https://d1234567890.cloudfront.net

# Email Service (SendGrid/AWS SES)
EMAIL_PROVIDER=sendgrid  # or 'ses', 'smtp'
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@soosh.ai
FROM_NAME=Soosh Platform

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Video Conferencing
VIDEO_PROVIDER=daily  # or 'zoom', 'agora', '100ms'
DAILY_API_KEY=your-daily-api-key
DAILY_DOMAIN=your-domain.daily.co

# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_TRACES_SAMPLE_RATE=0.1

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8081", "exp://"]
CORS_ALLOW_CREDENTIALS=True

# WebSocket
WS_PING_INTERVAL=25
WS_PING_TIMEOUT=10

# AI Configuration
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=1000
AI_RECOMMENDATION_BATCH_SIZE=10

# Caching
CACHE_TTL_SECONDS=3600
CACHE_RECOMMENDATIONS_TTL=1800

# Background Tasks
CELERY_TASK_ALWAYS_EAGER=False  # Set True for synchronous testing

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json  # or 'text'

# Feature Flags
ENABLE_AI_AGENT=True
ENABLE_PROXIMITY_SEARCH=True
ENABLE_VIDEO_CALLS=True
ENABLE_PAYMENTS=True

# Platform Settings
PLATFORM_FEE_PERCENTAGE=15  # 15% commission on mentorship payments
MIN_BOOKING_ADVANCE_HOURS=2  # Minimum hours before session can be booked
MAX_CANCELLATION_HOURS=24  # Free cancellation window
